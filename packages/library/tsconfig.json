{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": false,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ES6", "ES2019", "ES2020"],
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["node_modules", "lambda-layers-database", "dist", "serverless"]
}
